<!DOCTYPE html>
<html lang="en">
    <%- include('layouts/header') -%>
<body>
    <nav class="navbar navbar-expand-lg navbar-light" id="mainNav">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" href="/">DriveTest</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ms-auto py-4 py-lg-0">
                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/login">Login</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Header-->
    <header class="masthead" style="padding-top: 0; padding-bottom: 5rem;">
    </header>

    <!-- Main Content-->
    <main class="mb-4">
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <!-- Signup -->
                <div class="col-md-12 col-lg-6 col-xl-6">
                    <h3>Sign up</h3>
                    <div class="my-5">
                        <form id="signupForm" action="/signUpUser" method="post">
                             <!-- Username -->
                            <div class="form-floating">
                                <input class="form-control" id="username" name="username" type="text" placeholder="Enter your username..." required/>
                                <label for="username">Username</label>
                            </div>
                             <!-- Password -->
                            <div class="form-floating">
                                <input class="form-control" id="password" name="password" type="password" placeholder="Enter your password..." required/>
                                <label for="password">Password</label>
                            </div>
                             <!-- Confirm Password -->
                            <div class="form-floating">
                                <input class="form-control" id="confirm_password" name="confirm_password" type="password" placeholder="Re-enter your password..." required/>
                                <label for="confirm_password">Confirm Password</label>
                            </div>
                             <!-- User Type -->
                            <div class="form-floating">
                                <select class="form-select" name="user_type" id="user_type" required>
                                    <option value="driver">Driver</option>
                                    <option value="examiner">Examiner</option>
                                    <option value="admin">Admin</option>
                                </select>
                                <label for="user_type">User Type</label>
                            </div>
                            <br />

                            <!-- Flash messages -->
                            <%- include('layouts/alertMessage') -%>

                            <!-- Submit Button-->
                            <button class="btn btn-primary text-uppercase" id="signUpButton" type="submit" style="width: 100%; height: auto;">Sign up</button>
                        </form>
                    </div>
                </div>

                <!-- Login -->
                <div class="col-md-12 col-lg-6 col-xl-6">
                    <h3>Login</h3>
                    <div class="my-5">
                        <form id="loginForm" action="/loginUser" method="post">
                             <!-- Username -->
                            <div class="form-floating">
                                <input class="form-control" id="login_username" name="username" type="text" placeholder="Enter your username..." required/>
                                <label for="username">Username</label>
                            </div>
                             <!-- Password -->
                            <div class="form-floating">
                                <input class="form-control" id="login_password" name="password" type="password" placeholder="Enter your password..." required/>
                                <label for="password">Password</label>
                            </div>
                            <br />

                            <!-- Flash messages -->
                            <% if (error_message && error_message.length > 0) { %>       
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <%= error_message %>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            <% } %>

                            <!-- Submit Button-->
                            <button class="btn btn-primary text-uppercase" id="loginButton" type="submit" style="width: 100%; height: auto;">Login</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <%- include('layouts/footer') -%>
    <%- include('layouts/scripts') -%>
</body>
</html>